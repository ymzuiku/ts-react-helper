{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "../../dist/",
    "jsx": "react",
    "incremental": true
  },
  "exclude": ["**/node_modules", "**/test", "**/dist", "**/*spec.ts"]
}
